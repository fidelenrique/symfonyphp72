{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1 class="mt-4">Créer un nouveau véhicule</h1>

        <div class="row">
            <div class="col-md-6">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.brand, 'Marque du véhicule', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.brand, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.model, 'Modèle du véhicule', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.model, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.registrationDate, 'Date de registration', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.registrationDate, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.registrationNumber, 'Numéro de registration', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.registrationNumber, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.owner, 'Propriétaire', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.owner, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.characteristics, 'Caractéristiques', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.characteristics, {'attr': {'class': 'form-control', 'multiple': 'multiple'}}) }}
                </div>
                {# Ajoutez d'autres champs ici si nécessaire #}
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Créer le véhicule</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}