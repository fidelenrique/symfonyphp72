{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1 class="mt-4">Créer une caractéristique</h1>
        <div class="row">
            <div class="col-md-6 offset-md-3">
                {{ form_start(form, {'attr': {'class': 'mt-4'}}) }}
                <div class="form-group">
                    {{ form_label(form.name, 'Nom', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.name) }} {# Afficher les erreurs du champ name #}
                </div>
                <div class="form-group">
                    {{ form_label(form.value, 'Valeur', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.value, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.value) }} {# Afficher les erreurs du champ value #}
                </div>
                <div class="form-group">
                    {{ form_label(form.vehicle, 'Véhicule', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.vehicle, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.vehicle) }} {# Afficher les erreurs du champ vehicle #}
                </div>
                {{ form_errors(form) }} {# Afficher les erreurs générales du formulaire #}
                <button type="submit" class="btn btn-primary">Ajouter</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}